@page
@model SegundoEjercicio.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Crear cuenta";
    Layout = "/Pages/Shared/_Layout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
}

<body class="register-page">
    <div class="auth-hero"></div>

    <div class="container d-flex align-items-center justify-content-center" style="min-height:calc(100vh - 64px);">
        <div class="col-12 col-sm-10 col-md-7 col-lg-5 col-xl-4">
            <div class="auth-card">
                <h1 class="h4 auth-title mb-3 text-center">Crear cuenta</h1>

                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

                    <div class="mb-3">
                        <label asp-for="Input.FullName" class="form-label">Nombre y apellido</label>
                        <input asp-for="Input.FullName" class="form-control" placeholder="Ej. Juan Pérez" />
                        <span asp-validation-for="Input.FullName" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <input asp-for="Input.Email" class="form-control" placeholder="tu@email.com" />
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label">Contraseña</label>
                        <input asp-for="Input.Password" class="form-control" placeholder="********" />
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.ConfirmPassword" class="form-label">Confirmar contraseña</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="********" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Registrarme</button>
                </form>

                <div class="mt-3 text-center">
                    <a asp-area="Identity" asp-page="/Account/Login">¿Ya tenés cuenta? Iniciar sesión</a>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

