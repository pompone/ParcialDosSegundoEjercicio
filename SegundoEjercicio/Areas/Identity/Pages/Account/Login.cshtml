@page
@model SegundoEjercicio.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Iniciar sesión";
    Layout = "/Pages/Shared/_Layout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" />
    <style>
        /* Oculta header y footer SOLO en esta vista */
        header, footer { display: none !important; }

        /* Fondo a pantalla completa */
        html, body { height: 100%; }
        .auth-hero{
            position: fixed; inset: 0;
            background: url('/img/login-bg.jpg') center/cover no-repeat fixed; /* cambiá la ruta si usás otra */
            filter: brightness(.65);
        }

        /* Alto completo del contenedor para centrar */
        .container[style] { min-height: 100vh !important; }

        /* Estética del card (opcional) */
        .auth-card{
            backdrop-filter: blur(3px);
            background: rgba(255,255,255,.92);
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0,0,0,.25);
        }
    </style>
}

<div class="auth-hero"></div>

<div class="container d-flex align-items-center justify-content-center" style="min-height:100vh;">
    <div class="col-12 col-sm-10 col-md-7 col-lg-5 col-xl-4">
        <div class="auth-card p-4 p-md-5">
            <h1 class="h4 auth-title mb-3 text-center">Iniciar sesión</h1>

            <form method="post" novalidate>
                <input type="hidden" asp-for="ReturnUrl" />
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <input asp-for="Input.Email" class="form-control" placeholder="tu@email.com" />
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="Input.Password" class="form-label">Contraseña</label>
                    <input asp-for="Input.Password" class="form-control" placeholder="********" />
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="Input.RememberMe" class="form-check-input" />
                    <label asp-for="Input.RememberMe" class="form-check-label">Recordarme</label>
                </div>

                <button type="submit" class="btn btn-primary w-100">Entrar</button>
            </form>

            <div class="mt-3 text-center">
                <a asp-area="Identity" asp-page="/Account/Register">¿No tenés cuenta? Registrate</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

