@page
@model SegundoEjercicio.Pages.Libros.Solicitudes.IndexModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Bibliotecario")]
@{
    ViewData["Title"] = "Solicitudes pendientes";
}
<h2>Solicitudes pendientes</h2>

@if (TempData["msg"] is string m)
{
    <div class="alert alert-info">@m</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Socio</th>
            <th>Libro</th>
            <th>Devolver el</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Rows)
        {
            <tr>
                <td>@r.RequestedAt.ToString("dd/MM/yyyy HH:mm:ss")</td>
                <td>@r.MemberName</td>
                <td>@r.BookTitle</td>
                <td>@(r.DesiredReturnDate?.ToString("dd/MM/yyyy") ?? "-")</td>
                <td class="text-end">
                    <form method="post" asp-page-handler="Approve" asp-route-id="@r.Id" class="d-inline">
                        <button class="btn btn-success btn-sm">Aprobar</button>
                    </form>
                    <form method="post" asp-page-handler="Reject" asp-route-id="@r.Id" class="d-inline ms-1">
                        <button class="btn btn-outline-danger btn-sm">Denegar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

